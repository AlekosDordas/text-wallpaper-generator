{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "jest": true
    },
    "extends": "eslint:recommended",
		"parser": "babel-eslint",
		"plugins": [
			"flowtype"
		],
		"settings": {
			"flowtype": {
				"onlyFilesWithFlowAnnotation": true
			}
		},
    "parserOptions": {
        "sourceType": "module",
        "allowImportExportEverywhere": false,
        "codeFrame": false
    },
    "rules": {
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-console": [
            "warn"
        ],
        "strict": 1
    }
}
